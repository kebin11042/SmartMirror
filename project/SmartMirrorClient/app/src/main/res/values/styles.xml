<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorAccent">@color/th_l_grey</item>

    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/th_d_purple</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/th_l_purple</item>
        <item name="colorControlNormal">@color/th_l_purple</item>
        <item name="colorControlActivated">@color/th_l_grey</item>
    </style>

</resources>
