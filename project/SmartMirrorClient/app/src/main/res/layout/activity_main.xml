<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/th_black">

    <TextView
        android:layout_gravity="center|top"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/th_l_grey"
        android:text="W I N K\nS M A R T\nM I R R O R"
        android:textSize="45dp"
        android:layout_marginTop="100dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMainLogin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="로그인"
            android:background="@drawable/selector_th_l_grey"
            android:textColor="@color/th_black"
            android:textSize="15dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnMainJoin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="회원가입"
            android:background="@drawable/selector_th_l_grey"
            android:textColor="@color/th_black"
            android:textSize="15dp"/>

    </LinearLayout>

</FrameLayout>
