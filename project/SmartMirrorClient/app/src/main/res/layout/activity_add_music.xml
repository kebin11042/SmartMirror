<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/th_black">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_back_wh"
            android:scaleType="centerCrop"
            android:background="@drawable/selector_tab"
            android:padding="12dp"
            />

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/th_l_grey"
            android:text="음악 등록"
            android:textSize="16dp"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/th_l_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음악 링크 정보"
            android:textColor="@color/th_l_grey"
            android:textSize="12dp"/>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgvAddMusicSoundcloudArtwork"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@null"
                android:background="@color/th_d_grey"/>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtvAddMusicSoundcloudTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:textSize="14dp"
                    android:textColor="@color/th_l_grey"
                    android:singleLine="true"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="링크 등록"
            android:textColor="@color/th_l_grey"
            android:textSize="12dp"/>

        <EditText
            android:id="@+id/edtxAddMusicSoundcloudLink"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="13dp"
            android:hint="soundcloud 링크 url을 입력해 주세요"
            android:padding="6dp"
            android:textColorHint="@color/th_d_grey"
            android:textColor="@color/th_l_grey"
            android:inputType="textUri"
            android:textCursorDrawable="@drawable/cursor_th_l_grey"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/th_l_grey"/>

        <TextView
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="@color/th_l_grey"
            android:textSize="12dp"/>

        <EditText
            android:id="@+id/edtxAddMusicSubject"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="13dp"
            android:hint="음악 리스트에 추가할 제목을 입력해 주세요"
            android:padding="6dp"
            android:textColorHint="@color/th_d_grey"
            android:textColor="@color/th_l_grey"
            android:inputType="text"
            android:textCursorDrawable="@drawable/cursor_th_l_grey"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/th_l_grey"/>

    </LinearLayout>

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAddMusicPlay"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="음악 링크 확인"
                android:textSize="14dp"
                android:background="@color/th_d_grey"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btnAddMusicOk"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="완료"
                android:textSize="14dp"
                android:background="@drawable/selector_th_l_purple"
                android:textColor="@color/white"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>