<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_th_l_grey"
    android:padding="8dp"
    android:layout_marginTop="12dp">

    <ImageView
        android:id="@+id/imgvMusicViewThumbnail"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:src="@null"
        android:scaleType="centerCrop"
        android:background="@color/th_d_grey"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtvMusicViewSubject"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/th_black"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/txtvMusicViewUrl"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="@color/th_d_grey"
                android:singleLine="true"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtvMusicViewCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:textColor="@color/th_d_grey"
            android:textSize="12dp"/>

    </FrameLayout>

</LinearLayout>