<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/th_black">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_back_wh"
            android:scaleType="centerCrop"
            android:background="@drawable/selector_tab"
            android:padding="12dp"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/th_l_grey"
            android:text="회원가입"
            android:textSize="16dp"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/th_l_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/th_l_grey"
            android:textSize="12dp"
            android:text="Email"/>

        <EditText
            android:id="@+id/edtxJoinEmail"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="16dp"
            android:hint="Email"
            android:padding="6dp"
            android:textColorHint="@color/alpha_pressed"
            android:textColor="@color/th_l_grey"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@drawable/cursor_th_l_grey"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/th_l_grey"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/th_l_grey"
            android:textSize="12dp"
            android:text="이름"/>

        <EditText
            android:id="@+id/edtxJoinName"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="16dp"
            android:hint="이름"
            android:padding="6dp"
            android:textColorHint="@color/alpha_pressed"
            android:textColor="@color/th_l_grey"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@drawable/cursor_th_l_grey"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/th_l_grey"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/th_l_grey"
            android:textSize="12dp"
            android:text="비밀번호"/>

        <EditText
            android:id="@+id/edtxJoinPassword"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="16dp"
            android:hint="비밀번호"
            android:padding="6dp"
            android:textColorHint="@color/alpha_pressed"
            android:textColor="@color/th_l_grey"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/cursor_th_l_grey"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/th_l_grey"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/th_l_grey"
            android:textSize="12dp"
            android:text="비밀번호 확인"/>

        <EditText
            android:id="@+id/edtxJoinPasswordCon"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="16dp"
            android:hint="비밀번호 확인"
            android:padding="6dp"
            android:textColorHint="@color/alpha_pressed"
            android:textColor="@color/th_l_grey"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/cursor_th_l_grey"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/th_l_grey"/>

        <Button
            android:id="@+id/btnJoinJoin"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="가입하기"
            android:textSize="14dp"
            android:background="@drawable/selector_th_l_purple"
            android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/layJoinFacebook"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/selector_facebook">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/facebook_icon"/>

            <TextView
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="페이스북 계정으로 가입하기"
                android:textColor="@color/white"
                android:textSize="14dp"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>